.main-content-view.tour-content-view
  .tour-content-inner
    .block
      %h2 Let's get you started
      %p
        Create your account by entering your email, name and password.

      = form_for(resource, :as => resource_name, url: wizard_path, :method => "put") do |f|
        .form.form-inline
          %fieldset{:class => (flash[:alert] ? "field-error" : "")}
            %label.label-top-fix
              Email
            .input-container
              = f.email_field :email, :type => "text", :autofocus => true, :class => "large"

          %fieldset{:class => (flash[:name].present? ? "field-error" : "")}
            %label.label-top-fix
              Name
            .input-container
              = f.text_field :name, :class => "large", :maxlength => "50"
              - if flash[:name].present?
                .block-text-message
                  = flash[:name][0]

          %fieldset{:class => (flash[:password].present? ? "field-error" : "")}
            %label.label-top-fix
              Password
            .input-container
              = f.password_field :password, :class => "large", :maxlength => "50"
              %button.btn.action{:type => "submit"} Continue
              .block-text-message
                = flash[:alert]

              - if flash[:password].present?
                .block-text-message
                  = flash[:password][0]
