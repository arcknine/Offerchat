.main-content-view.tour-content-view
  .tour-content-inner
    .block
      %h2 Let's get you started
      %p
        Create your account by entering your display name and your new password

      - if flash[:notice]
        %p.notice= flash[:notice]
      = form_for(resource, :as => resource_name, url: wizard_path, :method => "put") do |f|
        .form.form-inline
          %fieldset
            %label
              Email name
            .input-container

              = f.email_field :email, :autofocus => true, :class => "large"
              %button.btn.action{:type => "submit"} Continue
