.login-wrapper
  .logo-large.centered
  .login-form.form
    %h2
      Forgot your password?
    - @user.errors.each do |key, val|
      %div{:style => "color: #e13d3d"}
        = "#{key}  #{val}"
    = form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f|
      %fieldset
        %label
          Email
        = f.email_field :email, :autofocus => true, :type =>"text"

      %fieldset
        = link_to "Login", new_session_path(resource_name), :class => "go-right", :style => "margin-top: 9px"
        %button.btn.action{:type => "submit"}
          Reset password
  .signup-box
    Don't have an account yet?
    %strong
      = link_to "Create an account", signup_wizard_path('step_one'), :class => "hovered", :style => "margin-top: 9px"



