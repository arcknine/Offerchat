.login-wrapper
  .logo-large.centered
  .login-form.form
    - flash.each do |key, value|
      %div{:class => "alert-danger"}= value
    = form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
      %fieldset
        %label
          Email
        = f.email_field :email, :type => "text", :autofocus => true
      %fieldset
        %label
          Password
        = f.password_field :password
      %fieldset
        %button.btn.action{:type => "submit"}
          Login
        = link_to "Signup", signup_wizard_path('step_one'), :class =>"go-right", :style => "margin-top: 9px"

