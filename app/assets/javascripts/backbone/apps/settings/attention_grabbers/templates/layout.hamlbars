            %img.current-attention-grabber{ alt: "{{grabber_name}}", src: "{{grabber_src}}" }

        .widget-box.widget-head-min.widget-theme.theme-steelblue
          .widget-head.widget-rounded-head.group
            .widget-min-message
              %i.widget.icon.icon-chat-2
