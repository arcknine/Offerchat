.language-selector
  %a.set-language.selected
    = image_tag "lang/english.png"
    %label
      English
  %a.set-language
    = image_tag "lang/deutsch.png"
    %label
      Deutsch
  %a.set-language
    = image_tag "lang/french.png"
    %label
      French
  %a.set-language
    = image_tag "lang/espanol.png"
    %label
      Espanol
  %a.set-language
    = image_tag "lang/portuguese.png"
    %label
      Portuguese
  %a.set-language
    = image_tag "lang/polish.png"
    %label
      Polish

.group.block.large

  .widget-preview-sample

    .widget-box.widget-theme.theme-pink3#widget-header
      .widget-head.widget-rounded-head.group
        = image_tag "avatar-large5.jpg", :class => "agent-thumbnail"

        .widget-agent-name
          Jill
        .widget-welcome-msg
          Hello! How can I help you today?
      .widget-body
        .widget-chat-viewer
          .message-item
            .group
              .message-author.agent-author
                {{user.display_name}}
            .message
              .message-date
                8:00am
              Lorem ipsum dolor sit amet, consectetur adipisicing elit. Nostrum, eligendi temporibus sint amet.
          .message-item
            .group
              .message-author
                Visitor
            .message
              .message-date
                8:03am
              yes, can you help me?
        
        .widget-input
          %i.widget.icon.icon-chat
          %input.widget-input-text{ :type => "text", :placeholder => "Type your question and hit enter" }
          %a.chat-settings
            %i.widget.icon.icon-gear
          %a.chat-rating
            %i.widget.icon.icon-thumbs-up
        .widget-footer
          .footer-logo
          .widget-footer-desc
            Powered by
            %strong
              %a
                Offerchat


  .block.inline
    .form.widget-label-form
      %fieldset
        %label
          Widget Label
        .input-container
          .input-append
            %input{ :type => "text", :id => "widget-label", :value => "Hello! How can I help you today?", :maxlength => 33, :name => "widget_label" }
            .add-on#widget-label-count
              33

      %fieldset
        %button.btn.action{ :type => "submit" }
          Save Changes