.header.group
  %a#root-path-link.logo
  #canvas-loader
  %ul.header-inline-list.primary-user-nav

    %li.reports-menu-link
      %a
        Reports

    %li.history-menu-link
      %a
        History

    %li.profile-status
      %a
        .profile-image-container
          .profile-image
            %img{src: '{{avatar}}'}
          %span.status{class: "{{status}}"}
            %i.icon.icon-check-small
      %ul.profile-status-dropdown
        %li
          %a#changeStatus{data: {status: "away"}}
            %span.status
              %i.icon.icon-check-small
            %span#current-status
              Away
        %li
          %a{href: "/logout", data: {status: "logout"}}
            %span.status.signout
              %i.icon.icon-small-x
            Signout
        .dropdown-pointer

    %li.profile-settings.header-settings
      %a
        %i.icon.icon-gear-large
      %ul.settings-dropdown
        %li
          %a#settings-menu-link
            Settings
        %li
          %a#websites-menu-link
            Websites
        %li
          %a#agent-menu-link
            Agent Management
        %li
          %a#account-menu-link
            Account
        .dropdown-pointer