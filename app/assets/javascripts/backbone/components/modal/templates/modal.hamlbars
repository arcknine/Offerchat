.modal-backdrop
  .modal-window
    .modal#modal-form
      .modal-header
        %a.close
          &times;
        %h2
          {{title}}
      .modal-body
        #modal-content-region
      .modal-footer.bordered
        {{#if buttons}}
        .buttons
          {{#each buttons}}
          <button data-form-button="{{type}}" class="{{className}}">{{text}}</button>
          {{/each}}
        {{/if}}
